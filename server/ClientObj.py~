# This class represents a client from the server's perspective

import socket

class ClientObj(object):

	# Constructor given the client's username, mode, and socket
	def __init__(self, sock, addr):
		self.user_name = ""
		self.opmode = ""
		self.clientsocket = sock
		self.addr = addr
	
	# Send a message to the client
	def sendmsg(msg):
		self.socket.send(msg)

	# -----------------------------------------------
	# GETTERS
	# -----------------------------------------------

	# Obtain the username
	def getUsername():
		return self.user_name
	
	# obtain operation mode
	def getOpmode():
		return self.opmode

	# Obtain the socket object
	def getSocket():
		return self.clientsocket

	# obtain the address
	def getAddr():
		return self.addr

	# -----------------------------------------------
	# SETTERS
	# -----------------------------------------------
	
	# Set the username
	def setUsername(new_username):
		self.user_name = new_username

	# Set the operation mode
	def setOpmode(new_opmode):
		self.opmode = new_opmode

	# -----------------------------------------------
	# OTHER FUNCTIONS
	# -----------------------------------------------
	def showDetails():
		print "Username: \t",self.user_name
		print "Operation mode: \t",self.opmode
		print "Address: \t",self.addr
